---
import Layout, { type LayoutProps } from '@/layouts/Layout.astro'

interface Props extends LayoutProps {}
---

<Layout
  {...Astro.props}
>
  <slot />
</Layout>

<style is:global>
  header {
    display: none !important;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    text-transform: uppercase;
    text-align: center;
    line-height: 3rem;
    letter-spacing: 0.2rem;
    font-weight: 700;
  }

  h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
    text-align: center;
    font-weight: 500;
  }

  p {
    text-wrap: pretty;
    text-align: center;
  }

  strong {
    color: var(--primary-100);
  }
</style>
