---
import Layout from "./Layout.astro";

const { frontmatter } = Astro.props;
---

<Layout
  description={frontmatter.description}
  title={frontmatter.title}
>
  <main>
    <slot />
  </main>
</Layout>

<style is:global>
  main {
    width: 90%;
    margin: 0 auto;
    margin-top: 5rem;
    margin-bottom: 2rem;
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  h2 {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  h3 {
    font-size: 1.5rem;
    font-weight: 500;
    margin-bottom: 1rem;
  }

  p {
    font-size: 1rem;
    font-weight: 400;
    margin-bottom: 1rem;
  }
</style>