---
import AboutMe from "../components/AboutMe.astro";
import Experience from "../components/Experience.astro";
import Newsletter from "../components/Newsletter.astro";
import Projects from "../components/Projects.astro";
import Resume from "../components/Resume.astro";
import Layout from "../layouts/Layout.astro";


const title =
  "Porfolio de José Castellano Sierras | Ingeniero Telemático y Desarrollador FullStack con 1 año de experiencia";
const description =
  "Aquí podrás encontrar más información de José Castellano Sierras. Ingeniero Telemático, especializado en el sector del desarrollo web. Con 1 año de experiencia laboral y 2 años de experiencia en proyectos personales.";
---

<Layout title={title} description={description}>
  <Resume />
  <Newsletter />
  <Experience />
  <Projects />
  <AboutMe />
</Layout>

<style>
  html {
    scroll-behavior: smooth;
  }

  @media (min-width: 768px) {
    section {
      width: 70ch;
    }

    #experience-list > li {
      flex-direction: row;
      gap: 5rem;
    }
  }
</style>
