---
interface Props {
  link: string;
  color?: string;
  hoverColor?: string;
}

const defaultColors = {
  color: '#007893',
  hoverColor: '#003A47'
}

let {
  link,
  color,
  hoverColor
} = Astro.props

if (!color) {
  color = defaultColors.color
}

if (!hoverColor) {
  hoverColor = defaultColors.hoverColor
} 
---

<div class="link-button">
  <a
  target="_blank"
  rel="noopener noreferrer"
  href={link}
  >
    <slot />
  </a>
</div>

<style define:vars={{ color, hoverColor }}>
  .link-button {
    background-color: var(--color);
    border: none;
    border-radius: 6px;
    cursor: pointer;
    /* color: white; */
    width: 85px;
    height: 40px;
    font-size: 0.9rem;
    
    transition: background-color 0.3s;
  }

  .link-button:hover {
    background-color: var(--hoverColor);
  }
  
  a {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.3rem;
    text-decoration: none;
    color: var(--text-100);
    font-weight: 500;
    box-shadow: 2px 8px 8px 0px rgba(0, 0, 0, 0.4);
    text-shadow: 3px 4px 7px rgba(81,67,21,0.8);
  }
</style>