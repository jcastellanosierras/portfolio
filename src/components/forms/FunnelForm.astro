---
import FunnelsForm from "./FunnelForm";

interface Props {}

const formId = import.meta.env.NEXT_PUBLIC_FUNNELS_FORM
---

<FunnelsForm formId={formId} client:only />

<style is:global>
  h1 {
    font-size: 3.5rem;
    font-weight: 700;
    text-align: center;
    text-transform: uppercase;
    text-wrap: balance;
    letter-spacing: 0.2rem;
    margin-bottom: 1rem;
  }

  #intro {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  form {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .question-container {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.5rem;

    width: 100%;
    margin-bottom: 1.5rem;
    color: var(--text-100);
  }

  .question-container input,
  .question-container textarea {
    width: 100%;
    border-radius: 7px;
    padding: 0.3rem;
  }

  .question-container input {
  }

  .question-container textarea {
    resize: vertical;
    min-height: 80px;
    max-height: 150px;
  }

  select {
    width: 100%;
    border-radius: 7px;
    padding: 0.3rem;
  }

  button {
    border: none;
    border-radius: 6px;
    box-shadow: 5px 5px 10px var(--bg-200);
    background-color: var(--accent-200);
    color: var(--bg-100);
    cursor: pointer;
    font-size: 1rem;
    font-weight: 500;
    padding: 0.8rem 0.8rem;
    text-decoration: none;
    transition: background-color 0.2s ease-in-out, color 0.2s ease-in-out;
  }

  button:hover {
    color: var(--text-100);
    background-color: var(--accent-100);
  }

  button:active {
    transform: scale(0.9);
  }

  strong {
    color: var(--primary-100);
  }
</style>