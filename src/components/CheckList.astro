---
import CheckIcon from '@/components/icons/CheckIcon.astro'

interface Props {
  items: string[]
}

const { items } = Astro.props
---

<ul>
  {items.map((item) => (
    <li>
      <div>
        <CheckIcon />
      </div>
      <span set:html={item}></span>
    </li>
  ))}
</ul>

<style>
  ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  li {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  span {
    flex-grow: 0;
    text-wrap: wrap;
  }

  div {
    display: flex;
    align-items: center;
  }
</style>